<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/brockerurl"
        android:layout_width="326dp"
        android:layout_height="42dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="http://192.168.8.101/location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--android:text="oneiot.friendly-tech.com" -->
    <!-- android:text="192.168.1.5" -->
 <Button
     android:id="@+id/Startbutton"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginStart="60dp"
     android:layout_marginTop="528dp"
     android:onClick="startRepeating"
     android:text="start"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />

 <TextView
     android:layout_width="179dp"
     android:layout_height="24dp"
     android:text="vehicleID"
     app:layout_constraintBottom_toTopOf="@+id/clientID"
     app:layout_constraintStart_toStartOf="@+id/clientID" />
 <EditText
     android:id="@+id/clientID"
     android:layout_width="346dp"
     android:layout_height="44dp"
     android:layout_marginStart="32dp"
     android:layout_marginTop="332dp"
     android:ems="10"
     android:inputType="textPersonName"
     android:text="TEST123"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent" />
     <TextView
         android:layout_width="147dp"
         android:layout_height="22dp"
         android:layout_marginLeft="4dp"
         android:layout_marginBottom="52dp"
         android:text="curruntlocation"
         app:layout_constraintBottom_toBottomOf="@+id/curruntlocation"
         app:layout_constraintLeft_toLeftOf="@+id/curruntlocation" />

     <TextView
         android:id="@+id/curruntlocation"
         android:layout_width="324dp"
         android:layout_height="38dp"
         android:layout_marginStart="36dp"
         android:layout_marginTop="80dp"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <TextView
         android:layout_width="179dp"
         android:layout_height="24dp"
         android:text="Server - URL"
         app:layout_constraintBottom_toTopOf="@+id/brockerurl"
         app:layout_constraintStart_toStartOf="@+id/brockerurl" />





     <TextView
         android:layout_width="179dp"
         android:layout_height="24dp"
         android:text="delay(s)"
         app:layout_constraintBottom_toTopOf="@+id/delay"
         app:layout_constraintStart_toStartOf="@+id/delay" />

     <EditText
         android:id="@+id/delay"
         android:layout_width="179dp"
         android:layout_height="41dp"
         android:layout_marginStart="172dp"
         android:layout_marginTop="420dp"
         android:ems="10"
         android:inputType="textPersonName"
         android:text="7"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />





     <Button
         android:id="@+id/stopbutton"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginStart="252dp"
         android:layout_marginTop="528dp"
         android:onClick="stopRepeating"
         android:text="stop"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />


 </androidx.constraintlayout.widget.ConstraintLayout>